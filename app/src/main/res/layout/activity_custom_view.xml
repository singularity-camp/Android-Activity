<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lt_main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Text" />

    <kz.singularity.activity1.views.UnderlinedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello! I'm underlined text view" />

    <kz.singularity.activity1.views.TitleSubtitleView
        android:id="@+id/tsv_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="My Title from Attributes"
        app:subtitle="My Subtitle from Attributes"/>

    <kz.singularity.activity1.views.CustomDrawnView
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>