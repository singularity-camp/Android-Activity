<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:titleTextAppearance="@style/TitleTextStyle"
        app:title="Toolbar Activity"
        app:titleTextColor="@color/white"
        app:subtitleTextAppearance="@style/SubtitleTextStyle"
        app:subtitle="Subtitle"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_open_context_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_context_menu" />

    <Button
        android:id="@+id/btn_open_popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_popup_menu" />

</androidx.appcompat.widget.LinearLayoutCompat>